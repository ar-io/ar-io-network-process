{
  "[mjs, js]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSaveMode": "file"
  },
  "prettier.configPath": ".prettierrc",
  "prettier.prettierPath": "./node_modules/prettier/index.cjs",
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/lib": true,
    "**/dist": true,
    "**/coverage": true
  },
  "Lua.codeLens.enable": true,
  "Lua.workspace.library": ["${workspaceFolderBasename}/**"],
  "Lua.workspace.ignoreDir": ["patches", "tests/code-patches"],
  "Lua.completion.callSnippet": "Both",
  "Lua.signatureHelp.enable": true,
  "Lua.workspace.checkThirdParty": true,
  "Lua.diagnostics.enable": true,
  "Lua.diagnostics.disable": ["lowercase-global", "undefined-global"],
  "Lua.format.defaultConfig": {
    "indent_style": "space",
    "indent_size": "2"
  },
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSaveMode": "file"
  },
  "Lua.diagnostics.severity": {
    // Type checking - missing required fields
    "missing-fields": "Error!",
    // Nil safety checks
    "need-check-nil": "Error!",
    "undefined-field": "Error!",
    // Type mismatch
    "assign-type-mismatch": "Error!",
    // No unknown/any types allowed
    "no-unknown": "Error!"
  },
  "Lua.type.castNumberToInteger": true,
  "Lua.type.weakUnionCheck": true,
  "Lua.hint.enable": true,
  "Lua.hint.paramName": "All",
  "Lua.hint.paramType": true,
  "Lua.hint.setType": true,
  "cSpell.words": [
    "ARIO",
    "hashchain",
    "redelegate",
    "redelegation",
    "redelegations"
  ]
}
